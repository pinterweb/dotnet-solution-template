# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root                     = true

# Unix-style newlines with a newline ending every file
[*]
indent_style             = space
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true
max_char                 = 100

[**.html]
max_char                 = 80
brace_style              = expand

[*.cs]
indent_size              = 4
